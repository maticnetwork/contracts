{
  "name": "matic-protocol",
  "version": "1.0.0",
  "description": "Set of Solidity smart contracts for running Staking and Plasma contracts for Polygon sidechain",
  "main": "hardhat.config.ts",
  "scripts": {
    "postinstall": "TS_NODE_TRANSPILE_ONLY=1 yarn typechain --network goerli",
    "deploy:all": "npx hardhat deploy-all",
    "testrpc": "hardhat node --port 9545",
    "template:process": "node scripts/process-templates.js",
    "typechain": "npx hardhat typechain",
    "compile": "npx hardhat compile",
    "release": "npx hardhat release",
    "test": "npx hardhat test --network root",
    "coverage": "scripts/run-coverage.sh",
    "test:ci": "scripts/run-test.sh",
    "bor:simulate": "cd test-blockchain && bash run-docker.sh",
    "bor:clean": "cd test-blockchain && bash stop-docker.sh",
    "verify:storage": "yarn compile && npx hardhat verify-storage",
    "verify:ci": "yarn compile --network mainnet && npx hardhat verify-ci --network mainnet",
    "lint": "yarn lint:sol && yarn lint:js",
    "lint:js": "eslint test/**/*.js",
    "lint:sol:fix": "solium -d contracts/ --fix",
    "lint:sol": "solium -d contracts/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maticnetwork/contracts.git"
  },
  "author": "Polygon Network",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/maticnetwork/contracts/issues"
  },
  "homepage": "https://github.com/maticnetwork/contracts",
  "config": {
    "mnemonics": "clock radar mass judge dismiss just intact mind resemble fringe diary casino"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-truffle5": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.5",
    "@truffle/hdwallet-provider": "^1.4.0",
    "@typechain/hardhat": "^2.3.1",
    "@typechain/truffle-v5": "^5.1.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "10.0.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "bip39": "^2.5.0",
    "bluebird": "^3.5.5",
    "chai": "4.2.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^4.1.2",
    "console-table-printer": "^2.10.0",
    "eslint": "5.9.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "eth-gas-reporter": "0.1.12",
    "eth-sig-util": "^2.1.1",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-block": "2.1.0",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "6.0.0",
    "ethereumjs-wallet": "^1.0.1",
    "ethers": "4.0.13",
    "glob": "^7.1.6",
    "hardhat": "^2.6.1",
    "hardhat-contract-sizer": "^2.1.1",
    "merkle-patricia-tree": "2.3.2",
    "minimist": "^1.2.5",
    "nunjucks": "^3.2.3",
    "openzeppelin-solidity": "2.2.0",
    "safe-buffer": "5.1.2",
    "solc": "^0.8.9",
    "solidity-coverage": "^0.7.4",
    "solidity-rlp": "^2.0.0",
    "solium": "^1.1.8",
    "truffle": "^5.4.14",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typechain": "^5.2.0",
    "typescript": "^4.4.3",
    "web3": "^1.5.2",
    "web3-eth-abi": "^1.0.0-beta.51"
  }
}
